<div class="min-h-screen bg-gray-100 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Participant Information</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Personal and registration details.</p>
        </div>
        <span class="px-4 py-2 rounded-full text-indigo-600 bg-indigo-50">
          <%= @participant.ticket_type %>
        </span>
      </div>
      
      <div class="border-t border-gray-200">
        <dl>
          <!-- Personal Information -->
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Full Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.full_name %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Gender</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.gender %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Marital Status</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.marital_status %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Date of Birth</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.date_of_birth&.strftime("%B %d, %Y") %></dd>
          </div>

          <!-- After Personal Information section -->
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Year of Musabaqa</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.year_of_musabaqa %></dd>
          </div>

          <!-- Contact Information -->
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Email Address</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.email_address %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Phone Number</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.phone_number %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Home Address</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.home_address %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">State</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.state %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">LGA</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.lga %></dd>
          </div>

          <!-- After LGA field -->
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Ward</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.ward %></dd>
          </div>

          <!-- Bank Information -->
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Bank Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.bank_name %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Account Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.account_name %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Account Number</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @participant.account_number %></dd>
          </div>
        </dl>
      </div>

      <div class="pt-5 flex justify-between">
        <%= link_to "Back to List", participants_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        
        <div class="space-x-3">
          <%= link_to "Edit", edit_participant_path(@participant), 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-[#01272B] hover:bg-[#001a1d]" %>
          
          <%= button_to "Delete", participant_path(@participant), 
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this participant?" },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </div>
</div>
